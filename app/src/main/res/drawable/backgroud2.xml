<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Imagen en la parte superior -->
    <item>
        <bitmap
            android:src="@drawable/imgplanta1"
        android:gravity="fill"
        android:top="0dp"
        android:left="0dp"
        android:right="0dp"
        android:bottom="0dp" />
    </item>

    <!-- Fondo de color sólido en la parte inferior -->
    <item android:bottom="670dp">
        <shape>
            <solid android:color="@color/segundoAzul"/>
            <corners android:bottomLeftRadius="100dp" android:bottomRightRadius="100dp"/>
        </shape>
    </item>

    <!-- Fondo de color sólido en la parte inferior -->
    <item android:top="350dp">
        <shape>
            <solid android:color="@color/segundoAzul"/>
            <corners android:topLeftRadius="100dp" android:topRightRadius="100dp"/>
        </shape>
    </item>
</layer-list>
